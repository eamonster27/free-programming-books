<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New Book</title>
  </head>
  <body>
    <h1>New Book Page!</h1>

    <%= form_for :book, url: books_path do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :author %><br>
        <%= f.text_field :author %>
      </p>

      <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </p>

      <p>
        <%= f.label :url %><br>
        <%= f.text_field :url %>
      </p>

      <p>
        <%= f.submit %>
      </p>
    <% end %>


  </body>
</html>
